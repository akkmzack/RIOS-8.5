<node-list module="rbt_memory_alloc">
   <config>
      <name>/rbt/sport/memory_alloc/config/enable</name>
      <description>Enable memory allocation heap tracking</description>
      <value type="bool">false</value>
   </config>

   <config>
      <name>/rbt/sport/memory_alloc/config/prof_enable_bytes_mb</name>
      <description>
         Trigger for tracking size class memory allocations
      </description>
      <value type="uint32">16</value>
   </config>

   <config>
      <name>/rbt/sport/memory_alloc/config/prof_disable_bytes_mb</name>
      <description>
         Stop trigger for tracking size class memory allocations
      </description>
      <value type="uint32">8</value>
   </config>

   <config>
      <name>/rbt/sport/memory_alloc/config/prof_global_enable_bytes_mb</name>
      <description>
         Trigger for tracking global memory allocations
      </description>
      <value type="uint32">256</value>
   </config>

   <config>
      <name>/rbt/sport/memory_alloc/config/prof_global_disable_bytes_mb</name>
      <description>
         Stop trigger for tracking global memory allocations
      </description>
      <value type="uint32">128</value>
   </config>

   <config>
      <name>/rbt/sport/memory_alloc/config/frequency</name>
      <description>Interval for tracking memory allocations</description>
      <value type="uint32">32</value>
   </config>

</node-list>
